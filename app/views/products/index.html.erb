<div class="container my-4">
  <p style="color: green"><%= notice %></p>

  <h1 class="text-center">Productos</h1>

  <table class="table table-striped table-bordered text-center">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Inventario</th>
        <th>Precio</th>
        <th>Categoría</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.inventory %></td>
          <td><%= product.price %></td>
          <td><%= product.categoria&.categoria %></td>
          <td class="d-flex justify-content-center gap-3">
              <%= link_to "Editar", edit_product_path(product), class: "btn btn-primary" %>
              <%= button_to "Eliminar", product, method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %>
  </div>
</div>
