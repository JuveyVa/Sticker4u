<div class="container my-4">
  <div class="d-flex justify-content-center align-items-center min-vh-100 flex-column">
    <p style="color: green"><%= notice %></p>

    <h1 class="text-center">Tickets</h1>

    <div id="tickets" class="table-responsive w-75">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Products</th>
            <th>Date</th>
            <th>Total</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td>
                <ul>
                  <% ticket.products.each do |product| %>
                    <li><%= product.name %></li>
                  <% end %>
                </ul>
              </td>
              <td><%= ticket.date %></td>
              <td><%= number_to_currency(ticket.total, unit: "", delimiter: ",") %></td>
              <td>
                <div class="d-flex gap-2">
                  <%= link_to "Edit", edit_ticket_path(ticket), class: "btn btn-primary btn-sm" %>
                  <%= button_to "Delete", ticket, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this ticket?" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <%= link_to "New ticket", new_ticket_path, class: "btn btn-success mt-3" %>
    </div>
  </div>
</div>


